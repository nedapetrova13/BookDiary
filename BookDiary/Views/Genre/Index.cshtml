@model IEnumerable<BookDiary.Models.ViewModels.GenreViewModels.GenreCreateViewModel>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-gradient text-white p-4" style="background-color: #8B6B4F;">
                    <h2 class="mb-0 fw-bold"><i class="fas fa-bookmark me-2"></i>Всички жанрове</h2>
                </div>
                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col" class="text-center">#</th>
                                    <th scope="col">Име</th>
                                    <th scope="col" class="text-center">Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var genre in Model)
                                {
                                    <tr>
                                        <td class="text-center">@genre.Id</td>
                                        <td>@genre.Name</td>
                                        <td class="text-center">
                                            <div class="d-flex justify-content-center gap-2">
                                                <a class="btn btn-success btn-sm" asp-action="Edit" asp-controller="Genre" asp-route-id="@genre.Id">
                                                    <i class="fas fa-edit"></i> Редактирай
                                                </a>
                                                <form method="post" asp-controller="Genre" asp-action="Delete">
                                                    <button type="submit" class="btn btn-danger btn-sm" asp-route-id="@genre.Id" onclick="return confirm('Сигурни ли сте, че искате да изтриете този жанр?');">
                                                        <i class="fas fa-trash"></i> Изтрий
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
