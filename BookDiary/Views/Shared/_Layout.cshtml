@using BookDiary.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookDiary</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookDiary.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --bd-primary: #5C4033;
            --bd-primary-light: #8B6B4F;
            --bd-secondary: #D2B48C;
            --bd-tertiary: #E6D1B1;
            --bd-background: #F5E6DA;
            --bd-text: #3A2921;
            --bd-accent: #A0522D;
            --bd-shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08);
            --bd-shadow-md: 0 4px 12px rgba(0, 0, 0, 0.12);
            --bd-border-radius: 12px;
            --bd-transition: all 0.3s ease;
        }

        body {
            background-color: var(--bd-background);
            color: var(--bd-text);
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Playfair Display', serif;
        }

        /* Main Layout */
        .bd-layout {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .bd-sidebar {
            width: 250px;
            background-color: var(--bd-background);
            border-right: 1px solid rgba(92, 64, 51, 0.1);
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 1000;
            box-shadow: var(--bd-shadow-md);
            transition: var(--bd-transition);
        }

        .bd-collapsed .bd-sidebar {
            width: 80px;
        }

        /* Sidebar toggle button */
        .bd-sidebar-toggle {
            position: absolute;
            top: 20px;
            right: -15px;
            width: 30px;
            height: 30px;
            background-color: var(--bd-primary);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 1001;
            box-shadow: var(--bd-shadow-sm);
            border: 2px solid white;
        }

        .bd-collapsed .bd-sidebar-toggle i {
            transform: rotate(180deg);
        }

        /* Sidebar content */
        .bd-sidebar-content {
            display: flex;
            flex-direction: column;
            height: 100%;
            overflow-x: hidden;
        }

        /* Logo */
        .bd-logo {
            padding: 20px;
            text-align: center;
        }

        .bd-logo img {
            max-width: 150px;
            transition: var(--bd-transition);
        }

        .bd-collapsed .bd-logo img {
            max-width: 50px;
        }

        /* Navigation */
        .bd-nav {
            flex-grow: 1;
            padding: 0 10px 80px 10px; /* Extra padding at bottom for fixed profile */
            overflow-y: auto;
        }

        .bd-nav::-webkit-scrollbar {
            width: 4px;
        }

        .bd-nav::-webkit-scrollbar-thumb {
            background-color: var(--bd-primary-light);
            border-radius: 10px;
        }

        .bd-nav-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .bd-nav-item {
            margin-bottom: 5px;
        }

        .bd-nav-link {
            display: flex;
            align-items: center;
            padding: 10px 15px;
            border-radius: 8px;
            color: var(--bd-text);
            text-decoration: none;
            transition: var(--bd-transition);
            position: relative;
            overflow: hidden;
        }

        .bd-nav-link:hover {
            background-color: rgba(139, 107, 79, 0.1);
            color: var(--bd-primary);
        }

        .bd-nav-icon {
            width: 24px;
            text-align: center;
            font-size: 1.1rem;
            margin-right: 12px;
            color: var(--bd-primary);
        }

        .bd-collapsed .bd-nav-item {
            text-align: center;
        }

        .bd-collapsed .bd-nav-link {
            padding: 10px 0;
            justify-content: center;
        }

        .bd-collapsed .bd-nav-text {
            display: none;
        }

        .bd-collapsed .bd-nav-icon {
            margin-right: 0;
            font-size: 1.3rem;
        }

        /* Active link */
        .bd-nav-link.active {
            background-color: var(--bd-primary);
            color: white;
        }

        .bd-nav-link.active .bd-nav-icon {
            color: white;
        }

        /* Category headers */
        .bd-nav-header {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--bd-primary-light);
            margin: 20px 10px 10px;
            padding-bottom: 5px;
            border-bottom: 1px solid rgba(139, 107, 79, 0.2);
        }

        .bd-collapsed .bd-nav-header {
            text-align: center;
            font-size: 0.6rem;
        }

        /* Accordion menus */
        .bd-accordion-button {
            background-color: transparent;
            border: none;
            width: 100%;
            text-align: left;
            padding: 10px 15px;
            border-radius: 8px;
            color: var(--bd-text);
            font-weight: 500;
            display: flex;
            align-items: center;
            position: relative;
            cursor: pointer;
            transition: var(--bd-transition);
        }

        .bd-accordion-button:hover {
            background-color: rgba(139, 107, 79, 0.1);
            color: var(--bd-primary);
        }

        .bd-accordion-button:focus {
            outline: none;
            box-shadow: none;
        }

        .bd-accordion-button::after {
            flex-shrink: 0;
            width: 1.25rem;
            height: 1.25rem;
            margin-left: auto;
            content: "";
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%235C4033'%3e%3cpath fill-rule='evenodd' d='M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-size: 1.25rem;
            transition: transform .2s ease-in-out;
        }

        .bd-accordion-button:not(.collapsed)::after {
            transform: rotate(-180deg);
        }

        .bd-accordion-button.active {
            background-color: rgba(139, 107, 79, 0.15);
            color: var(--bd-primary);
            font-weight: 600;
        }

        .bd-collapsed .bd-accordion-button {
            padding: 10px 0;
            justify-content: center;
        }

        .bd-collapsed .bd-accordion-button::after {
            display: none;
        }

        .bd-collapsed .bd-accordion-body {
            position: absolute;
            left: 100%;
            top: 0;
            width: 200px;
            background-color: var(--bd-background);
            border-radius: 0 8px 8px 0;
            box-shadow: var(--bd-shadow-md);
            padding: 10px;
            display: none;
        }

        .bd-collapsed .bd-nav-item:hover .bd-accordion-body {
            display: block;
        }

        /* Submenu */
        .bd-submenu {
            list-style: none;
            padding: 0 0 0 24px;
            margin: 0;
        }

        .bd-collapsed .bd-submenu {
            padding: 0;
        }

        .bd-submenu .bd-nav-link {
            padding: 8px 15px;
            font-size: 0.95rem;
        }

        /* User profile */
        .bd-profile {
            padding: 15px;
            display: flex;
            align-items: center;
            background-color: var(--bd-background);
            border-top: 1px solid rgba(92, 64, 51, 0.1);
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
        }

        .bd-profile-avatar {
            width: 38px;
            height: 38px;
            border-radius: 50%;
            overflow: hidden;
            border: 2px solid var(--bd-tertiary);
            margin-right: 10px;
        }

        .bd-profile-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .bd-profile-info {
            flex-grow: 1;
            min-width: 0;
        }

        .bd-profile-name {
            margin: 0;
            font-weight: 600;
            font-size: 0.9rem;
            color: var(--bd-primary);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .bd-profile-role {
            margin: 0;
            font-size: 0.75rem;
            color: var(--bd-primary-light);
        }

        .bd-collapsed .bd-profile-info {
            display: none;
        }

        .bd-profile-actions {
            margin-left: 10px;
        }

        /* Content area */
        .bd-content {
            margin-left: 250px;
            padding: 30px;
            width: calc(100% - 250px);
            transition: var(--bd-transition);
        }

        .bd-collapsed .bd-content {
            margin-left: 80px;
            width: calc(100% - 80px);
        }

        /* Mobile styles */
        .bd-mobile-toggle {
            display: none;
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 999;
            background-color: var(--bd-primary);
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 5px;
            cursor: pointer;
        }

        .bd-mobile-backdrop {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }

        media (max-width: 991px) {
            .bd-sidebar {
                transform: translateX(-100%);
            }
            
            .bd-mobile-visible .bd-sidebar {
                transform: translateX(0);
            }
            
            .bd-content {
                margin-left: 0 !important;
                width: 100% !important;
            }
            
            .bd-mobile-toggle {
                display: block;
            }
            
            .bd-mobile-visible .bd-mobile-backdrop {
                display: block;
            }
            
            .bd-sidebar-toggle {
                display: none;
            }
        }

        /* Tooltip for collapsed mode */
        .bd-tooltip {
            position: relative;
        }

        .bd-collapsed .bd-tooltip:hover::after {
            content: attr(data-tooltip);
            position: absolute;
            top: 50%;
            left: 100%;
            transform: translateY(-50%);
            background-color: var(--bd-primary);
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 0.8rem;
            white-space: nowrap;
            z-index: 1000;
            margin-left: 10px;
        }

        .bd-collapsed .bd-tooltip:hover::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 100%;
            transform: translateY(-50%);
            border-width: 5px;
            border-style: solid;
            border-color: transparent var(--bd-primary) transparent transparent;
            z-index: 1000;
        }
    </style>
</head>
<body>
    <button class="bd-mobile-toggle" id="bdMobileToggle">
        <i class="fas fa-bars"></i>
    </button>

    <div class="bd-mobile-backdrop" id="bdMobileBackdrop"></div>

    <div class="bd-layout">
