    <script>
        $(document).ready(function() {
            // Sidebar toggle
            $("#bdSidebarToggle").click(function() {
                $("body").toggleClass("bd-collapsed");
            });
            
            // Mobile menu toggle
            $("#bdMobileToggle").click(function() {
                $("body").toggleClass("bd-mobile-visible");
            });
            
            // Close menu when clicking outside on mobile
            $("#bdMobileBackdrop").click(function() {
                $("body").removeClass("bd-mobile-visible");
            });
            
            // Detect current page and set active class
            const currentUrl = window.location.pathname;
            $('.bd-nav-link').each(function() {
                const linkUrl = $(this).attr('href');
                if (linkUrl && currentUrl.includes(linkUrl) && linkUrl !== '/' && linkUrl.length > 1) {
                    $(this).addClass('active');
                    
                    // If in a submenu, open the accordion
                    const accordionBody = $(this).closest('.accordion-collapse');
                    if (accordionBody.length) {
                        accordionBody.addClass('show');
                        accordionBody.prev().find('.bd-accordion-button').removeClass('collapsed').addClass('active');
                    }
                }
            });
            
            // Fix for accordion buttons
            $('.bd-accordion-button').on('click', function() {
                $('.bd-accordion-button').removeClass('active');
                if (!$(this).hasClass('collapsed')) {
                    $(this).addClass('active');
                }
            });
            
            // Custom styling for login partial
            $('.bd-profile-actions form button').addClass('btn btn-link text-decoration-none p-0 text-primary');
            $('.bd-profile-actions a').addClass('btn btn-link text-decoration-none p-0 text-primary');
        });
    </script>

