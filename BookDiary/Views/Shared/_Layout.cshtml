@using BookDiary.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookDiary</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookDiary.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #F5E6DA;
            color: #5C4033;
        }

        .custom-navbar {
/*             background-color: #E3D5C5;
 */        }

        .nav-link, .text-dark {
            color: #5C4033 !important;
        }

            .nav-link:hover {
                color: #3D2B1F !important;
            }
    </style>
</head>
<body>
    <div class="d-flex">
        <nav class="navbar navbar-light custom-navbar flex-column p-3" style=" height: 100%; align-items: flex-start;">
            <a class="navbar-brand mb-3" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/Untitled_design-removebg-preview.png" alt="BookDiary Logo" style="max-width: 150px; height: auto;">
            </a>
            <ul class="navbar-nav flex-column w-100">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Главна страница</a>
                </li>
                <li> <partial name="_LoginPartial" /></li>
                @if (User.IsInRole(SD.AdminRole))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="collapse" data-bs-target="#adminMenu" aria-expanded="false">
                            Администрация
                        </a>
                        <div class="collapse" id="adminMenu">
                            <ul class="list-unstyled ps-3">
                                @foreach (var item in new[] { "Author", "Genre", "Tag", "Language", "PublishingHouse", "News", "Book", "Series" })
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" data-bs-toggle="collapse" href="#collapse-@item">@item</a>
                                        <div class="collapse ps-3" id="collapse-@item">
                                            <ul class="list-unstyled">
                                                <li><a class="nav-link" asp-area="" asp-controller="@item" asp-action="Add">Add</a></li>
                                                <li><a class="nav-link" asp-area="" asp-controller="@item" asp-action="Edit">Edit</a></li>
                                                <li><a class="nav-link" asp-area="" asp-controller="@item" asp-action="Index">Index</a></li>
                                            </ul>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </li>
                }
              
            </ul>
        </nav>

        <div class="flex-grow-1 p-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BookDiary - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
