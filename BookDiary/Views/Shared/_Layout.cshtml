        <aside class="bd-sidebar">
            <div class="bd-sidebar-toggle" id="bdSidebarToggle">
                <i class="fas fa-chevron-left"></i>
            </div>
            
            <div class="bd-sidebar-content">
                <!-- Logo -->
                <div class="bd-logo">
                    <a asp-area="" asp-controller="Home" asp-action="LoggedIndex">
                        <img src="~/img/Untitled_design-removebg-preview.png" alt="BookDiary Logo">
                    </a>
                </div>
                
                <!-- Navigation -->
                <nav class="bd-nav">
                    <ul class="bd-nav-list">
                        <!-- Home -->
                        <li class="bd-nav-item bd-tooltip" data-tooltip="Главна страница">
                            <a class="bd-nav-link" asp-area="" asp-controller="Home" asp-action="LoggedIndex">
                                <span class="bd-nav-icon"><i class="fas fa-home"></i></span>
                                <span class="bd-nav-text">Главна страница</span>
                            </a>
                        </li>
                        
                        @if (User.IsInRole(SD.UserRole))
                        {
                            <div class="bd-nav-header">Моите книги</div>
                            
                            <!-- Profile -->
                            <li class="bd-nav-item bd-tooltip" data-tooltip="Профил">
                                <a class="bd-nav-link" asp-controller="Profile" asp-action="UserProfile">
                                    <span class="bd-nav-icon"><i class="fas fa-user"></i></span>
                                    <span class="bd-nav-text">Профил</span>
                                </a>
                            </li>
                            
                            <!-- Books -->
                            <li class="bd-nav-item bd-tooltip" data-tooltip="Книги">
                                <a class="bd-nav-link" asp-controller="Book" asp-action="Index">
                                    <span class="bd-nav-icon"><i class="fas fa-book"></i></span>
                                    <span class="bd-nav-text">Kниги</span>
                                </a>
                            </li>
                            
                            <!-- Authors -->
                            <li class="bd-nav-item bd-tooltip" data-tooltip="Автори">
                                <a class="bd-nav-link" asp-controller="Author" asp-action="Index">
                                    <span class="bd-nav-icon"><i class="fas fa-feather-alt"></i></span>
                                    <span class="bd-nav-text">Aвтори</span>
                                </a>
                            </li>
                            
                            <!-- Series -->
                            <li class="bd-nav-item bd-tooltip" data-tooltip="Поредици">
                                <a class="bd-nav-link" asp-controller="Series" asp-action="Index">
                                    <span class="bd-nav-icon"><i class="fas fa-layer-group"></i></span>
                                    <span class="bd-nav-text">Поредици</span>
                                </a>
                            </li>
                            
                            <!-- Shelves -->
                            <li class="bd-nav-item bd-tooltip" data-tooltip="Шкафове">
                                <a class="bd-nav-link" asp-controller="Shelf" asp-action="Index">
                                    <span class="bd-nav-icon"><i class="fas fa-bookmark"></i></span>
                                    <span class="bd-nav-text">Шкафове</span>
                                </a>
                            </li>
                            
                            <!-- Currently Reading -->
                            <li class="bd-nav-item bd-tooltip" data-tooltip="В момента чета">
                                <a class="bd-nav-link" asp-controller="CurrentRead" asp-action="Index">
                                    <span class="bd-nav-icon"><i class="fas fa-glasses"></i></span>
                                    <span class="bd-nav-text">В момента чета</span>
                                </a>
                            </li>
                            
                            <!-- Notes -->
                            <li class="bd-nav-item bd-tooltip" data-tooltip="Моите записки">
                                <a class="bd-nav-link" asp-controller="Notes" asp-action="Index">
                                    <span class="bd-nav-icon"><i class="fas fa-sticky-note"></i></span>
                                    <span class="bd-nav-text">Моите записки</span>
                                </a>
                            </li>
                        }

                        @if (User.IsInRole(SD.AdminRole))
                        {
                            <div class="bd-nav-header">Администрация</div>
                            
                            <!-- Authors Admin -->
                            <li class="bd-nav-item">
                                <div class="accordion" id="accordionAuthors">
                                    <div class="bd-tooltip" data-tooltip="Автори">
                                        <button class="bd-accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAuthors" aria-expanded="false" aria-controls="collapseAuthors">
                                            <span class="bd-nav-icon"><i class="fas fa-user-edit"></i></span>
                                            <span class="bd-nav-text">Автори</span>
                                        </button>
                                    </div>
                                    <div id="collapseAuthors" class="accordion-collapse collapse" data-bs-parent="#accordionAuthors">
                                        <div class="bd-accordion-body">
                                            <ul class="bd-submenu">
                                                <li class="bd-nav-item bd-tooltip" data-tooltip="Добави автор">
                                                    <a class="bd-nav-link" asp-area="" asp-controller="Author" asp-action="Add">
                                                        <span class="bd-nav-icon"><i class="fas fa-plus"></i></span>
                                                        <span class="bd-nav-text">Добави</span>
                                                    </a>
                                                </li>
                                                <li class="bd-nav-item bd-tooltip" data-tooltip="Всички новини">
