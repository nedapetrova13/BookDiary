@{
}
@model IEnumerable<BookDiary.Models.ViewModels.TagViewModels.TagCreateViewModel>
<h1>See all tags</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var tag in Model){
            <tr>
                <td scope="row">@tag.Id</td>
                <td>@tag.Name</td>
                <td>
                    <a type="button" class="btn btn-success" asp-action="Edit" asp-controller="Tag" asp-route-id="@tag.Id">Edit</a>
                    <form method="post" asp-controller="Tag" asp-action="Delete">
                        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Tag" asp-route-id="@tag.Id">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table> 