@model IEnumerable<BookDiary.Models.Author>
<div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px;">
@foreach(var au in Model){
    <div class="card" style="width: 18rem;">
        <img src="@au.ProfilePictureURL" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@au.Name</h5>
            <a type="button" class="btn btn-primary" asp-action="Edit" asp-controller="Author" asp-route-id="@au.Id">Edit</a>
        </div>
    </div>
}
</div>
