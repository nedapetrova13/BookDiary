@model IEnumerable<BookDiary.Models.ViewModels.AuthorViewModels.AuthorCreateViewModel>

<style>
    /* Updated colors to fit the bookish aesthetic */
    .card {
        --bg-card: rgba(255, 248, 220, 0.9); /* Soft parchment-like background */
        --primary: #8B4513; /* Rich brown for warmth */
        --primary-hover: #A0522D; /* Slightly lighter brown */
        --light: #5a3e2b; /* Dark coffee color for text */
        --shadow: rgba(0, 0, 0, 0.15); /* Soft shadow effect */

        position: relative;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        padding: 1rem;
        width: 16rem;
        background-color: rgb(251 238 220 / 45%);
        border-radius: 1rem;
        box-shadow: 0 4px 10px var(--shadow);
        text-align: center;
    }

    .image_container {
        overflow: hidden;
        cursor: pointer;
        position: relative;
        z-index: 5;
        width: 100%;
        height: 200px;
        background-color: var(--primary);
        border-radius: 0.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .image_container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 0.5rem;
        }

    .title {
        font-size: 1.1rem;
        font-weight: bold;
        color: var(--light);
        text-transform: capitalize;
        text-overflow: ellipsis;
    }

    .cart-button {
        cursor: pointer;
        padding: 0.6rem;
        width: 100%;
        background: #67320c;
        font-size: 0.9rem;
        font-weight: 600;
        color: white;
        border: none;
        border-radius: 8px;
        transition: background 0.3s ease;
    }

        .cart-button:hover {
            background: var(--primary-hover);
        }

</style>

<div style="display: flex; flex-wrap: wrap; gap: 1.5rem; justify-content: center;">
    @foreach (var au in Model)
    {
        <div class="card">
            <div class="image_container">
                <img src="@au.ProfilePictureURL" alt="Author Image">
            </div>
            <div class="title">
                <span>@au.Name</span>
            </div>
            <button class="cart-button">
                <span>
                    <a asp-area="" asp-controller="Author" asp-action="Info" asp-route-AuthorName="@au.Name">Виж още</a>
                </span>
            </button>
        </div>
    }
</div>
