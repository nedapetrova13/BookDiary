@model IEnumerable<BookDiary.Models.ViewModels.AuthorViewModels.AuthorCreateViewModel>

<div class="container py-4">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
                <div class="card-header bg-gradient text-white p-4" style="background-color: #8B6B4F;">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0 fw-bold"><i class="fas fa-layer-group me-2"></i>Всички автори</h2>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="authors-container">
    @foreach (var au in Model)
    {
        <div class="author-card" data-aos="fade-up">
            <div class="image-container">
                <img src="@au.ProfilePictureURL" alt="Author Image">
                <div class="overlay">
                    
                </div>
            </div>
            <div class="card-content">
                <h4 class="author-name">@au.Name</h4>
                <a asp-area="" asp-controller="Author" asp-action="Info" asp-route-AuthorName="@au.Name" class="view-more-btn">
                    Виж още
                </a>
            </div>
        </div>
    }
</div>

<style>
    /* Variables for consistent theming */
    :root {
        --primary-color: #8B4513;
        --secondary-color: #A0522D;
        --card-bg: rgba(255, 248, 220, 0.9);
        --text-color: #5a3e2b;
        --shadow-color: rgba(0, 0, 0, 0.15);
        --border-radius: 12px;
        --transition-speed: 0.4s;
    }

    /* Container for all author cards */
    .authors-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 2rem;
        padding: 2rem;
        justify-content: center;
        perspective: 1000px;
    }

    /* Author card styling */
    .author-card {
        position: relative;
        background: var(--card-bg);
        border-radius: var(--border-radius);
        box-shadow: 0 10px 20px var(--shadow-color);
        overflow: hidden;
        transition: transform var(--transition-speed), box-shadow var(--transition-speed);
        transform-style: preserve-3d;
        height: 350px;
    }

        .author-card:hover {
            transform: translateY(-10px) rotateX(5deg);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

    /* Image container with hover effect */
    .image-container {
        position: relative;
        height: 250px;
        overflow: hidden;
        border-radius: var(--border-radius) var(--border-radius) 0 0;
    }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform var(--transition-speed);
        }

    .author-card:hover .image-container img {
        transform: scale(1.05);
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
        opacity: 0;
        transition: opacity var(--transition-speed);
        display: flex;
        align-items: flex-end;
        padding: 1rem;
    }

    .author-card:hover .overlay {
        opacity: 1;
    }

    .author-info {
        color: white;
        transform: translateY(20px);
        transition: transform var(--transition-speed);
    }

    .author-card:hover .author-info {
        transform: translateY(0);
    }

    .author-info h3 {
        margin: 0;
        font-size: 1.4rem;
        font-weight: 500;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
    }

    .card-content {
        padding: 1rem;
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .author-name {
        font-size: 1.2rem;
        color: var(--text-color);
        margin: 0;
        font-weight: 600;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .view-more-btn {
        padding: 0.7rem 1rem;
        background-color: var(--primary-color);
        color: white !important;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
        transition: background-color var(--transition-speed), transform 0.2s;
        border: none;
        cursor: pointer;
        display: inline-block;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .view-more-btn:hover {
            background-color: var(--secondary-color);
            transform: translateY(-2px);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }

        .view-more-btn:active {
            transform: translateY(0);
        }

    media (max-width: 768px) {
        .authors-container

    {
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        padding: 1rem;
        gap: 1.5rem;
    }

    .author-card {
        height: 320px;
    }

    .image-container {
        height: 220px;
    }

    }

    media (max-width: 480px) {
        .authors-container

    {
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
        gap: 1rem;
    }

    .author-card {
        height: 290px;
    }

    .image-container {
        height: 200px;
    }

    .author-info h3 {
        font-size: 1.2rem;
    }

    .author-name {
        font-size: 1.1rem;
    }

    }

    [data-aos] {
        opacity: 0;
        transition-property: opacity, transform;
    }

        [data-aos].aos-animate {
            opacity: 1;
        }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof AOS !== 'undefined') {
            AOS.init({
                duration: 800,
                easing: 'ease-out',
                once: true
            });
        } else {
            document.querySelectorAll('[data-aos]').forEach(element => {
                element.removeAttribute('data-aos');
            });
        }
    });
</script>