@model BookDiary.Models.ViewModels.ProfileViewModels.AdminProfileViewModel;

<div class="admin-profile-container">
    <div class="profile-header">
        <h1>Administrator Profile</h1>
        <div class="profile-avatar-container">
            @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
            {
                <img src="@Model.ProfilePictureUrl" alt="@Model.Name's profile picture" class="profile-avatar" />
            }
            else
            {
                <div class="profile-avatar profile-avatar-placeholder">
                    <span>@Model.Name.Substring(0, 1).ToUpper()</span>
                </div>
            }
        </div>
    </div>

    <div class="profile-details">
        <div class="detail-group">
            <label>Name</label>
            <p>@Model.Name</p>
        </div>
        <div class="detail-group">
            <label>Email</label>
            <p>@Model.Email</p>
        </div>
        <div class="detail-group">
            <label>Administrator ID</label>
            <p>@Model.Id</p>
        </div>
        <div class="detail-group">
            <label>Role</label>
            <p>System Administrator</p>
        </div>
        <div class="detail-group">
            <label>Last Login</label>
            <p>@DateTime.Now.AddDays(-1).ToString("MMMM dd, yyyy - hh:mm tt")</p>
        </div>
    </div>

    <div class="action-buttons">
        <a href="#" class="btn btn-primary">Edit Profile</a>
        <a href="#" class="btn btn-secondary">Change Password</a>
        <a href="#" class="btn btn-secondary">Manage Users</a>
        <a href="#" class="btn btn-secondary">System Settings</a>
    </div>
</div>

<style>
    .admin-profile-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #f5f1e8; /* Light beige background */
        border-radius: 8px;
        box-shadow: 0 4px 12px rgba(73, 55, 40, 0.1);
    }

    .profile-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #8c6d4f; /* Medium brown border */
    }

        .profile-header h1 {
            color: #4d3319; /* Dark brown text */
            font-family: 'Georgia', serif;
            margin: 0;
        }

    .profile-avatar-container {
        width: 120px;
        height: 120px;
        overflow: hidden;
        border-radius: 50%;
        border: 4px solid #8c6d4f; /* Medium brown border */
    }

    .profile-avatar {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .profile-avatar-placeholder {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #8c6d4f; /* Medium brown background */
        color: #f5f1e8; /* Light beige text */
        font-size: 3rem;
        font-weight: bold;
    }

    .profile-details {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .detail-group {
        margin-bottom: 1rem;
    }

        .detail-group label {
            display: block;
            font-size: 0.9rem;
            color: #8c6d4f; /* Medium brown text */
            margin-bottom: 0.3rem;
            font-weight: 600;
        }

        .detail-group p {
            font-size: 1.1rem;
            color: #4d3319; /* Dark brown text */
            margin: 0;
            padding: 0.5rem 0;
            border-bottom: 1px solid #d9cdb8; /* Light brown border */
        }

    .action-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .btn-primary {
        background-color: #6b4f31; /* Dark brown */
        color: #f5f1e8; /* Light beige */
        border: none;
    }

        .btn-primary:hover {
            background-color: #4d3319; /* Darker brown on hover */
        }

    .btn-secondary {
        background-color: #d9cdb8; /* Light brown */
        color: #4d3319; /* Dark brown */
        border: 1px solid #8c6d4f; /* Medium brown border */
    }

        .btn-secondary:hover {
            background-color: #c4b59e; /* Slightly darker on hover */
        }

    media (max-width: 768px) {
        .profile-header

    {
        flex-direction: column;
        align-items: flex-start;
    }

    .profile-avatar-container {
        margin-top: 1rem;
    }

    .profile-details {
        grid-template-columns: 1fr;
    }

    }
</style>
