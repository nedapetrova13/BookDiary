@model BookDiary.Models.ViewModels.ProfileViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "User Profile";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow" style="background-color: #2c1e17; color: #e8d9c5; border-color: #8b5a2b;">
                <div class="card-body">
                    <div class="row">
                        <!-- Profile Picture Column -->
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            @if (!string.IsNullOrEmpty(Model.ProfilePictureURL))
                            {
                                <img src="@Model.ProfilePictureURL" class="rounded-circle img-fluid mb-3" alt="Profile Picture" style="max-width: 200px; border: 4px solid #8b5a2b;">
                            }
                            else
                            {
                                <div class="rounded-circle mx-auto d-flex align-items-center justify-content-center" style="width: 200px; height: 200px; background-color: #8b5a2b; border: 4px solid #a67c52;">
                                    <span style="font-size: 72px; color: #e8d9c5;">@(Model.Name != null ? Model.Name[0].ToString().ToUpper() : "U")</span>
                                </div>
                            }
                            <h3 class="mt-3">@(Model.Name ?? "User")</h3>

                            

                            <div class="mt-4">
                                <a href="@Url.Action("EditProfile", "User")" class="btn btn-outline-light" style="background-color: #8b5a2b; border-color: #a67c52;">Edit Profile</a>
                            </div>
                        </div>

                        <!-- User Info Column -->
                        <div class="col-md-8">
                            <div class="card mb-4" style="background-color: #3c2a20; border-color: #8b5a2b;">
                                <div class="card-header" style="background-color: #59402f; border-color: #8b5a2b;">
                                    <h5 class="mb-0">About Me</h5>
                                </div>
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(Model.Bio))
                                    {
                                        <p>@Model.Bio</p>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Tell us about yourself by updating your profile...</p>
                                    }
                                </div>
                            </div>

                            <!-- Favorite Book Section -->
                            <div class="card" style="background-color: #3c2a20; border-color: #8b5a2b;">
                                <div class="card-header" style="background-color: #59402f; border-color: #8b5a2b;">
                                    <h5 class="mb-0">Favorite Book</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.FavouriteBook != null)
                                    {
                                        <div class="row">
                                            <div class="col-md-4 text-center">
                                                @if (!string.IsNullOrEmpty(Model.FavouriteBook.CoverImageURL))
                                                {
                                                    <img src="@Model.FavouriteBook.CoverImageURL" class="img-fluid rounded" style="max-height: 200px; border: 2px solid #8b5a2b;" alt="Book Cover">
                                                }
                                                else
                                                {
                                                    <div class="d-flex align-items-center justify-content-center" style="height: 200px; background-color: #59402f; border: 2px solid #8b5a2b;">
                                                        <span>No Image</span>
                                                    </div>
                                                }
                                            </div>
                                            <div class="col-md-8">
                                                <h4>@Model.FavouriteBook.Title</h4>
                                                <a href="@Url.Action("Details", "Books", new { id = Model.FavouriteBook.Id })" class="btn btn-sm mt-3" style="background-color: #8b5a2b; color: #e8d9c5;">View Book</a>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center py-4">
                                            <p class="text-muted">You haven't selected a favorite book yet.</p>
                                            <a href="@Url.Action("Index", "Books")" class="btn btn-sm" style="background-color: #8b5a2b; color: #e8d9c5;">Browse Books</a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>