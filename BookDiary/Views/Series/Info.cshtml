@model BookDiary.Models.ViewModels.SeriesViewModels.SeriesAdminViewModel;
<div class="flex flex-col max-w-5xl mx-auto bg-white rounded-lg shadow-lg p-8 mb-8">
    <!-- Series Header -->
    <div class="border-b border-gray-200 pb-6 mb-6">
        <div class="flex items-start justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">@Model.Title</h1>
                <div class="mt-2 flex items-center text-gray-600">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><path d="m19 21-7-4-7 4V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v16z"></path></svg>
                    <span class="font-medium">Series</span>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex gap-3">
                <a class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
                   asp-action="Edit" asp-route-id="@Model.Id">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                    </svg>
                    Edit
                </a>
                <form method="post" asp-action="Delete" asp-route-id="@Model.Id" style="display: inline;">
                    <button type="submit" class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                            <path d="M3 6h18"></path>
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6"></path>
                            <path d="M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                            <line x1="10" y1="11" x2="10" y2="17"></line>
                            <line x1="14" y1="11" x2="14" y2="17"></line>
                        </svg>
                        Delete
                    </button>
                </form>
            </div>
        </div>

        <!-- Description -->
        <div class="mt-6">
            <h2 class="text-gray-700 font-medium mb-2">Description</h2>
            <div class="bg-gray-50 p-4 rounded-lg text-gray-700 leading-relaxed">
                @Model.Description
            </div>
        </div>
    </div>

    <!-- Books in Series -->
    <div>
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Books in this Series</h2>
        @if (Model.Books != null && Model.Books.Any())
        {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var book in Model.Books)
            {
                <div class="flex flex-col bg-white border border-gray-200 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                    <a asp-area="" asp-controller="Book" asp-action="Info" asp-route-BookId="@book.Id" class="w-full h-56 overflow-hidden">
                        <img src="@book.CoverImageURL"
                             alt="Cover of @book.Title"
                             class="object-cover w-full h-full transition-transform hover:scale-105"
                             onerror="this.src='/images/placeholder-cover.jpg'" />
                    </a>
                </div>
            }
        </div>
        }
        else
        {
        <div class="bg-gray-50 p-6 rounded-lg text-gray-500 text-center">
            <p>No books have been added to this series yet.</p>
            <a asp-area="" asp-controller="Book" asp-action="Create" class="inline-block mt-4 px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">
                Add a Book
            </a>
        </div>
        }
    </div>

    <!-- Add New Book Button -->
    @if (Model.Books != null && Model.Books.Any())
    {
        <div class="mt-8 text-center">
            <a asp-area="" asp-controller="Book" asp-action="Create" class="inline-flex items-center px-5 py-2.5 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                    <path d="M12 5v14M5 12h14"></path>
                </svg>
                Add New Book to Series
            </a>
        </div>
    }
</div>
