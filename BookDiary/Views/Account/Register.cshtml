@{
    Layout = null;
}
@model BookDiary.Models.ViewModels.Account.RegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Georgia', serif;
            color: #5a3e2b;
            background: url('/img/susan-q-yin-2JIvboGLeho-unsplash.jpg') no-repeat center center/cover;
            background-attachment: fixed;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .register-container {
            background: rgba(255, 248, 220, 0.9);
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            width: 400px;
            text-align: center;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .form-group {
            text-align: left;
            margin-bottom: 15px;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #8B4513;
            padding: 10px;
        }

        .btn-register {
            background: #8B4513;
            color: white;
            width: 100%;
            padding: 12px;
            font-size: 1.1rem;
            border-radius: 8px;
            transition: 0.3s;
            border: none;
        }

            .btn-register:hover {
                background: #A0522D;
            }

        .text-danger {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>

    <div class="register-container">
        <h1>Регистрация</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="Register" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name">Име</label>
                <input asp-for="Name" class="form-control" placeholder="Въвдете име" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Имейл</label>
                <input asp-for="Email" class="form-control" placeholder="Въведете имейл" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Парола</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Въведете парола" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Потвърди парола</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Потвърдете парола" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProfilePicture">Профилна снимка</label>
                <input asp-for="ProfilePicture" type="file" class="form-control" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-register">Регистрирай се</button>
        </form>
    </div>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
