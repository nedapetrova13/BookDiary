@{
    Layout = null;
}
@model BookDiary.Models.ViewModels.Account.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Вход</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Georgia', serif;
            color: #5a3e2b;
            background: url('/img/susan-q-yin-2JIvboGLeho-unsplash.jpg') no-repeat center center/cover;
            background-attachment: fixed; /* Fixes the background image while scrolling */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background: rgba(255, 248, 220, 0.9); /* Slightly darker for better contrast */
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            width: 400px;
            text-align: center;
        }

        
        h1 {
            font-size: 2rem;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .form-group {
            text-align: left;
            margin-bottom: 15px;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #8B4513;
            padding: 10px;
        }

        .btn-login {
            background: #8B4513;
            color: white;
            width: 100%;
            padding: 12px;
            font-size: 1.1rem;
            border-radius: 8px;
            transition: 0.3s;
            border: none;
        }

            .btn-login:hover {
                background: #A0522D;
            }

        .text-danger {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <h1>Вход</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email">Имейл</label>
                <input asp-for="Email" class="form-control" aria-required="true" placeholder="имейл" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Парола</label>
                <input asp-for="Password" class="form-control" aria-required="true" type="password" placeholder="парола" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-login">Вход</button>
            <a class="btn btn-register" asp-controller="Account" asp-action="Register" style="text-decoration: none;"> Нямате профил?   Регистрация</a>
        </form>
    </div>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
