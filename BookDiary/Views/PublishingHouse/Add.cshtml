@model BookDiary.Models.ViewModels.PublishingHouseViewModels.PublishingHouseCreateViewModel;

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-gradient text-white p-4" style="background-color: #8B6B4F;">
                    <h2 class="mb-0 fw-bold"><i class="fas fa-building me-2"></i>Добавяне на издателство</h2>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="row g-4">
                            <!-- Publishing House Name -->
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input type="text" asp-for="Name" class="form-control border-0 border-bottom rounded-0" required placeholder="Име на издателството" />
                                    <label asp-for="Name">Име</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <!-- Year Founded -->
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input type="number" asp-for="YearFounded" class="form-control border-0 border-bottom rounded-0" required placeholder="Година на основаване" />
                                    <label asp-for="YearFounded">Година на основаване</label>
                                    <span asp-validation-for="YearFounded" class="text-danger"></span>
                                </div>
                            </div>
                            <!-- Submit Button -->
                            <div class="col-12 mt-3">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a href="javascript:history.back()" class="btn btn-outline-secondary px-4 py-2">
                                        <i class="fas fa-times me-2"></i>Отказ
                                    </a>
                                    <button type="submit" asp-action="Add" asp-controller="PublishingHouse" class="btn text-white px-4 py-2" style="background-color: #5C4033;">
                                        <i class="fas fa-plus-circle me-2"></i>Добави издателство
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            $(".form-control, .form-select").focus(function() {
                $(this).parent().addClass("border-bottom-0");
                $(this).addClass("shadow-sm");
            }).blur(function() {
                $(this).parent().removeClass("border-bottom-0");
                $(this).removeClass("shadow-sm");
            });
        });
    </script>
}