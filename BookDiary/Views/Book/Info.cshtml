        <script>
            document.addEventListener('DOMContentLoaded', function() {
            // Get the accordion button and icon
            const accordionButton = document.querySelector('#accordionFlushExample .accordion-button');
            const icon = accordionButton.querySelector('i');

            // Add hover effect for accordion button
            accordionButton.addEventListener('mouseenter', function() {
            this.style.background = 'linear-gradient(135deg, #7d5f42, #9a7a58)';
            });

            accordionButton.addEventListener('mouseleave', function() {
            if (!this.classList.contains('collapsed')) {
            this.style.background = 'linear-gradient(135deg, #7d5f42, #9a7a58)';
            } else {
            this.style.background = 'linear-gradient(135deg, #8b6b4c, #a68763)';
            }
            });

            // Rotate icon when accordion is opened/closed
            accordionButton.addEventListener('click', function() {
            if (this.classList.contains('collapsed')) {
            icon.style.transform = 'rotate(90deg)';
            this.style.background = 'linear-gradient(135deg, #7d5f42, #9a7a58)';
            } else {
            icon.style.transform = 'rotate(0)';
            this.style.background = 'linear-gradient(135deg, #8b6b4c, #a68763)';
            }
            });

            // Add hover effects for all buttons
            document.querySelectorAll('#flush-collapseOne button').forEach(button => {
            if (!button.classList.contains('accordion-button')) {
            button.addEventListener('mouseenter', function() {
            if (this.style.backgroundColor === 'rgb(245, 240, 232)') {
            this.style.backgroundColor = '#e6dccb';
            this.style.boxShadow = '0 4px 8px rgba(0,0,0,0.1)';
            this.style.transform = 'translateY(-2px)';
            } else if (this.style.background.includes('gradient')) {
            this.style.background = 'linear-gradient(to right, #7d5f42, #9a7a58)';
            this.style.boxShadow = '0 4px 10px rgba(0,0,0,0.15)';
            this.style.transform = 'translateY(-2px)';
            }
            });

            button.addEventListener('mouseleave', function() {
            if (this.style.backgroundColor === 'rgb(230, 220, 203)') {
            this.style.backgroundColor = '#f5f0e8';
            this.style.boxShadow = '0 2px 5px rgba(0,0,0,0.05)';
            this.style.transform = 'translateY(0)';
            } else if (this.style.background.includes('gradient')) {
            this.style.background = 'linear-gradient(to right, #8b6b4c, #a68763)';
            this.style.boxShadow = '0 3px 8px rgba(0,0,0,0.1)';
            this.style.transform = 'translateY(0)';
            }
            });
            }
            });
            });
        </script>

