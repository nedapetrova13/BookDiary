    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BookPages" class="form-label">Number of Pages</label>
        <input type="number" asp-for="BookPages" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Chapters" class="form-label">Chapters</label>
        <input type="number" asp-for="Chapters" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary w-100" asp-action="Edit" asp-controller="Book" asp-route-id="@Model.Id">Update Book</button>
